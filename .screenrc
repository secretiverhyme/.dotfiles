caption always '%?%F%{= wk}%:%{=u kw}%?  %h %-025= %c:%s %D %d %M %Y'
hardstatus alwayslastline '%{= kw} %-Lw %{+r} %n%f %50>%t %{-r}%+Lw  %<'

shell -$SHELL
term screen-256color

escape ^Zz

bind o focus
bind ^o focus
bind s split

altscreen on
defnonblock on
defscrollback 5000
defutf8 on
startup_message off
vbell off

nethack on
